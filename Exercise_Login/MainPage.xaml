<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Exercise_Login.MainPage">
    <StackLayout VerticalOptions="Center" Margin="20">
        <Entry Placeholder="Email"
               Keyboard="Email" />
        <Entry Placeholder="Password"
               IsPassword="True" />
        <Button Text="Login" x:Name="LoginButton" Clicked="Login_Clicked" />
        
    </StackLayout>
</ContentPage>